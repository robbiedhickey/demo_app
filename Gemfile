source 'https://rubygems.org'

gem 'rails', '3.2.2'

group :development do
  gem 'sqlite3', '1.3.5'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '3.2.4'
  gem 'coffee-rails', '3.2.2'

  gem 'uglifier', '1.2.3'
end

gem 'jquery-rails', '2.0.0'

#this gem is required in production at
#to access the PostreSQL database used by Heroku
group :production do
  gem 'pg', '0.12.2'
end